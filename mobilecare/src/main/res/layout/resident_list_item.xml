<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_horizontal">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resident_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:descendantFocusability="blocksDescendants">



    <LinearLayout
        android:id="@+id/image_border"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="6dp">

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

    </LinearLayout>
    
    <TextView
        android:id="@+id/text_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/image_border"
        android:singleLine="false"
        android:layout_marginRight="6dp"
        android:textSize="16sp"
        android:textColor="#000" />
    
    <TextView
        android:id="@+id/text_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_border"
        android:layout_below="@id/text_lastname"
        android:singleLine="false"
        android:layout_marginRight="6dp"
        android:textSize="16sp"
        android:textColor="#000" />

</RelativeLayout>
</android.support.v7.widget.CardView>